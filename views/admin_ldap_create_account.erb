<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h3>Create new POSIX account</h3>
</div>
<div class="modal-body">
  <form class="form-horizontal" method="post" action="/admin/ldap/createaccount">
    <input type="hidden" name="_method" value="put">
    <fieldset>

      <!-- Full name input -->
      <div class="control-group">
        <label class="control-label" for="account-fullname">Full name</label>
        <div class="controls">
          <input id="account-fullname" name="account-fullname">
        </div>
      </div>


      <!-- Username input -->
      <div class="control-group">
        <label class="control-label" for="account-username">Username</label>
        <div class="controls">
          <input id="account-username" name="account-username">
        </div>
      </div>

      <!-- Password -->
      <div class="control-group">
        <label class="control-label" for="account-password">Password</label>
        <div class="controls">
          <input id="account-password" name="account-password">
        </div>
      </div>

      <!-- Group selector -->
      <div class="control-group">
        <label class="control-label" for="account-primary-group">Group</label>
        <div class="controls">
          <select name="account-primary-group" id="account-primary-group">
            <% ldap_admin.posixgroups.each do |group| %>
              <option value="<%= group.gidnumber %>"><%= group.cn %> (<%= group.gidnumber %>)</option>
            <% end %>
          </select>
        </div>

      <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Create"/>
      </div>
    </fieldset>
  </form>
</div>
