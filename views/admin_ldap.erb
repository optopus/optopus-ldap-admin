<h3>POSIX Accounts</h3>
<button class="btn btn-primary" onclick="load_util('/admin/ldap/createaccount')"><i class="icon-user"></i> Add account</button>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>cn</th>
      <th>uid</th>
      <th>uidNumber</th>
      <th>gidNumber</th>
      <th>homeDirectory</th>
      <th>loginShell</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% ldap_admin.posixaccounts.each do |account| %>
      <tr>
        <td><%= account.cn %></td>
        <td><%= account.uid %></td>
        <td><%= account.uidnumber %></td>
        <td><%= account.gidnumber %> (<%= account.posixgroup %>)</td>
        <td><%= account.homedirectory %></td>
        <td><%= account.loginshell %></td>
        <td><button class="btn btn-mini">Change Password</button> <button class="btn btn-mini" onclick="load_util('/admin/ldap/posixaccount/<%= account.uid %>/groups')">Groups</button> <button class="btn btn-mini btn-danger" onclick="load_util('/admin/ldap/posixaccount/<%= account.uid %>/delete')">Delete</button></td>
      </tr>
    <% end %>
  </tbody>
</table>
